<!DOCTYPE html>
<html>

<head>
	<title>Dashboard</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!--STYLES-->
	<link rel="stylesheet" href="/styles/importer.css">
	<!--STYLES END-->
</head>

<body>
	{{> header}}
	<div class="container" data-storeId="{{responseData.0.id}}">
		<div class="row">
			<div class="col-lg-12 my-3">
				<h1 title="Store name">{{responseData.0.data.name}}</h1>
				<h2 class="catgeory" title="category">{{responseData.0.data.category}}</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 my-3">
				<div class="float-left">
					<button class="btn btn-info" id="add" data-toggle="modal" data-target="#addModal">
							ADD
					</button>
				</div>
			</div>
			<div class="col-lg-6 my-3">
				<div class="float-right">
					<div class="btn-group">
						<button class="btn btn-info" id="list">
							List View
						</button>
						<button class="btn btn-danger" id="grid">
							Grid View
						</button>
					</div>
				</div>
			</div>
		</div> 
		<div id="products" class="row view-group">
			{{#each responseDataProducts}}
				<div class="item col-xs-4 col-lg-4" data-id="{{this.id}}">
					{{#with this.data}}
					{{> item}}
					{{/with}}
				</div>
			{{/each}}

		</div>
	</div>

	{{> footer}}

	{{> modal}}

	<div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
		<div class="toast-header">
			<strong class="mr-auto">Dashboard {{version}}</strong>
			<small>now</small>
			<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
			<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="toast-body">
			Product deleted!
		</div>
	</div>
	<!--SCRIPTS-->
	<script src="/dependencies/sails.io.js"></script>
	<script src="/vendor/jquery/dist/jquery.min.js"></script>
	<script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="/js/main.js"></script>
	<!--SCRIPTS END-->
</body>
</html>